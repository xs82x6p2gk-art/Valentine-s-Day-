<title>Be My Valentine üíò</title>

<style>
  body {
    margin: 0;
    overflow: hidden;
    height: 100vh;
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    font-family: 'Comic Sans MS', cursive, sans-serif;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .card {
    background: white;
    padding: 30px;
    width: 90%;
    max-width: 350px;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    z-index: 5;
    animation: pop 0.8s ease;
  }

  h1 {
    color: #ff4d6d;
    animation: pulse 2s infinite;
  }

  p {
    font-size: 18px;
    margin-bottom: 25px;
  }

  button {
    padding: 15px 26px;
    font-size: 18px;
    border: none;
    border-radius: 14px;
    cursor: pointer;
    margin: 8px;
  }

  #yesBtn {
    background: #ff4d6d;
    color: white;
  }

  #noBtn {
    background: #ddd;
    position: absolute;
  }

  .heart {
    position: absolute;
    font-size: 20px;
    animation: floatUp 6s linear forwards;
    pointer-events: none;
  }

  .sparkle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: white;
    border-radius: 50%;
    pointer-events: none;
    animation: sparkle 0.8s linear forwards;
  }

  canvas {
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
  }

  @keyframes floatUp {
    from { transform: translateY(100vh); opacity: 1; }
    to { transform: translateY(-10vh); opacity: 0; }
  }

  @keyframes sparkle {
    from { opacity: 1; transform: scale(1); }
    to { opacity: 0; transform: scale(0); }
  }

  @keyframes pop {
    from { transform: scale(0); }
    to { transform: scale(1); }
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }
</style>
