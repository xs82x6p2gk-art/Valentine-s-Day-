<body>

<canvas id="fireworks"></canvas>

<div class="card" id="card">
  <h1>üíñ Hey You üíñ</h1>
  <p>Will you be my Valentine?</p>
  <button id="yesBtn" onclick="sayYes()">Yes üíï</button>
  <button id="noBtn" onmouseover="moveNo()" ontouchstart="moveNo()">No üôà</button>
</div>

<!-- YouTube Music -->
<iframe
  id="music"
  width="0"
  height="0"
  allow="autoplay"
></iframe>

<script>
  const canvas = document.getElementById("fireworks");
  const ctx = canvas.getContext("2d");
  canvas.width = innerWidth;
  canvas.height = innerHeight;

  function moveNo() {
    const b = document.getElementById("noBtn");
    b.style.left = Math.random() * (innerWidth - 100) + "px";
    b.style.top = Math.random() * (innerHeight - 60) + "px";
  }

  function sayYes() {
    document.getElementById("music").src =
      "https://www.youtube.com/embed/5z9Z3y4zL0Q?autoplay=1";

    document.getElementById("card").innerHTML = `
      <h1 style="font-size: 32px;">üíò YAYYYY üíò</h1>
      <p style="font-size: 20px;">Happy Valentine‚Äôs Day ‚ù§Ô∏è<br>You are my Bra üòò</p>
    `;

    setInterval(createHeart, 250);
    startBeatSync();
  }

  function createHeart() {
    const h = document.createElement("div");
    h.className = "heart";
    h.innerHTML = "‚ù§Ô∏è";
    h.style.left = Math.random() * 100 + "vw";
    h.style.fontSize = Math.random() * 20 + 15 + "px";
    document.body.appendChild(h);
    setTimeout(() => h.remove(), 6000);
  }

  /* üî• BEAT-SYNCED FIREWORKS (Rhythm matched to Bra‚Äôs groove) */
  function startBeatSync() {
    const beat = 520;   // smooth highlife tempo
    const drop = beat * 4;

    setInterval(() => firework(25, 2), beat);
    setInterval(() => {
      firework(70, 3.5);
      confetti();
    }, drop);
  }

  function firework(particles, size) {
    const x = Math.random() * canvas.width;
    const y = Math.random() * canvas.height / 2;
    for (let i = 0; i < particles; i++) {
      ctx.beginPath();
      ctx.arc(
        x + Math.random()*80 - 40,
        y + Math.random()*80 - 40,
        size,
        0,
        Math.PI * 2
      );
      ctx.fillStyle = `hsl(${Math.random()*360},100%,70%)`;
      ctx.fill();
    }
  }

  function confetti() {
    for (let i = 0; i < 80; i++) {
      const c = document.createElement("div");
      c.style.position = "absolute";
      c.style.width = "6px";
      c.style.height = "6px";
      c.style.background = `hsl(${Math.random()*360},100%,70%)`;
      c.style.left = "50vw";
      c.style.top = "50vh";
      c.style.transform =
        `translate(${Math.random()*400-200}px, ${Math.random()*400-200}px)`;
      c.style.transition = "1.5s";
      document.body.appendChild(c);
      setTimeout(() => c.remove(), 1500);
    }
  }

  function sparkle(e) {
    const s = document.createElement("div");
    s.className = "sparkle";
    s.style.left = e.pageX + "px";
    s.style.top = e.pageY + "px";
    document.body.appendChild(s);
    setTimeout(() => s.remove(), 800);
  }

  document.addEventListener("mousemove", sparkle);
  document.addEventListener("touchmove", e => {
    sparkle({ pageX: e.touches[0].pageX, pageY: e.touches[0].pageY });
  });
</script>

</body>
</html>
